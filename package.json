{
	"name": "pure-flow-ai",
	"type": "module",
	"version": "1.0.0",
  "description": "ðŸ¤– Smart text analysis package for detecting positive and negative words with AI support. Features customizable word lists, multiple languages, and AI-powered sentiment analysis. Perfect for content moderation, sentiment analysis, and text filtering in any Node.js application.",
	"author": {
		"name": "Artemev Alexandr",
		"url": "https://github.com/Zilero232"
	},
	"license": "MIT",
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Zilero232"
	},
	"homepage": "https://github.com/Zilero232/pure-flow-ai#readme",
	"repository": {
		"url": "git+https://github.com/Zilero232/pure-flow-ai.git"
	},
	"bugs": {
		"url": "https://github.com/Zilero232/pure-flow-ai/issues"
	},
  "keywords": [
    "word-analysis",
    "text-checker",
    "ai-powered",
    "positive-words",
    "negative-words",
    "word-filter",
    "text-analysis",
    "content-moderation",
    "nlp",
    "language-processing",
    "sentiment-detection",
    "word-lists",
    "ai-support",
    "text-filtering",
    "text-analysis",
    "ai-powered",
    "positive-words",
    "negative-words",
    "word-filter",
    "text-analysis",
    "bad-words",
    "language-filter",
    "text-processing",
    "content-filter",
    "moderation-tools",
    "text-sanitizer"
  ],
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js",
      "types": "./build/types/index.d.ts"
    }
  },
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/types/index.d.ts",
	"files": [
		"build/"
	],
	"engines": {
		"node": ">=14.17.6"
	},
	"scripts": {
		"clean": "rimraf build",

    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "rollup -c --environment NODE_ENV:production,FORMAT:cjs --configPlugin typescript",
    "build:esm": "rollup -c --environment NODE_ENV:production,FORMAT:esm --configPlugin typescript",

    "predev": "yarn clean",
    "dev": "yarn dev:cjs && yarn dev:esm",
    "dev:cjs": "rollup -c --environment NODE_ENV:development,FORMAT:cjs --configPlugin typescript",
    "dev:esm": "rollup -c --environment NODE_ENV:development,FORMAT:esm --configPlugin typescript",

    "prewatch": "yarn clean",
    "watch": "yarn watch:cjs && yarn watch:esm",
    "watch:cjs": "rollup -c --environment NODE_ENV:development,FORMAT:cjs --configPlugin typescript --watch",
    "watch:esm": "rollup -c --environment NODE_ENV:development,FORMAT:esm --configPlugin typescript --watch",

		"lint:check": "yarn eslint",
		"lint:fix": "yarn eslint --fix",
		"test": "vitest run -c ./vitest.config.ts",
		"test:watch": "vitest watch -c ./vitest.config.ts",
		"commit": "yarn git-cz",
		"prepare": "husky"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^28.0.2",
		"@rollup/plugin-image": "^3.0.3",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-strip": "^3.0.4",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.13.4",
		"@types/rollup-plugin-auto-external": "^2.0.5",
		"@types/rollup-plugin-progress": "^1.1.6",
		"@zilero/eslint": "^1.0.1",
		"@zilero/tsconfigs": "^1.0.1",
		"@zilero/vitest": "^1.0.1",
		"commit-jazzer": "^1.1.3",
		"commitizen": "^4.3.1",
		"husky": "^9.1.7",
		"rimraf": "^6.0.1",
		"rollup": "^4.34.6",
		"rollup-plugin-analyzer": "^4.0.0",
		"rollup-plugin-auto-external": "^2.0.0",
		"rollup-plugin-banner": "^0.2.1",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-filesize": "^10.0.0",
		"rollup-plugin-license": "^3.5.3",
		"rollup-plugin-progress": "^1.1.2",
		"rollup-plugin-typescript-paths": "^1.5.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/commit-jazzer"
		}
	},
	"lint-staged": {
		"*.{ts,js}": [
			"yarn lint:check"
		]
	}
}
